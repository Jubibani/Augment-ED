<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:background="#14000000"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/cdinarian_info" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Radially symmetrical, aquatic invertebrates (e.g., jellyfish, corals, sea anemones) characterized by the presence of cnidocytes containing stinging organelles (nematocysts) and exhibiting either a polyp or medusa body form."
        android:textColor="@android:color/white" />
</LinearLayout>