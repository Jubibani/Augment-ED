<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:background="#14000000"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/echinoderm_info" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" A phylum of exclusively marine invertebrates characterized by pentamerous radial symmetry in adults, a calcareous endoskeleton, and a unique water vascular system with tube feet for locomotion and feeding."
        android:textColor="@android:color/white" />
</LinearLayout>