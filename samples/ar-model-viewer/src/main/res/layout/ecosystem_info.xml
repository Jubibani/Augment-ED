<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:background="#14000000"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/ecosystem_info" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="An ecosystem is made up of the interaction of all living organisms (like animals, plants, and bugs) in an area with all of the non-living organisms (like water, dirt, rocks, and the sun)."
        android:textColor="@android:color/white" />
</LinearLayout>