<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:background="#14000000"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/eutherians_info" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The largest and most widespread group of mammals, defined by their extended gestation period within the uterus, where the embryo develops more fully nourished by a complex placenta before birth (e.g., humans, dogs, whales, bats)."
        android:textColor="@android:color/white" />
</LinearLayout>