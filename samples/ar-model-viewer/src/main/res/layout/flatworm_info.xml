<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:background="#14000000"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/flarworm_info" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="A phylum of bilaterally symmetrical, unsegmented invertebrates characterized by a dorsoventrally flattened body, lacking a coelom (acoelomate), and possessing a sac-like gut with a single opening."
        android:textColor="@android:color/white" />
</LinearLayout>