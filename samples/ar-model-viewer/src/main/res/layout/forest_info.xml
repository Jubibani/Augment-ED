<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:background="#14000000"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/forest_info" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/a_forest_is_a_place_with_lots_and_lots_of_trees_and_it_s_a_home_for_many_plants_and_animals_it_s_like_a_big_green_playground_and_a_very_important_part_of_our_earth"
        android:textColor="@android:color/white" />
</LinearLayout>