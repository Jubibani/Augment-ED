<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:background="#14000000"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/nematocyst_info" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Specialized, harpoon-like stinging organelles found within cnidocytes (specialized cells) of cnidarians, capable of rapidly ejecting a barbed, venom-filled thread for prey capture and defense."
        android:textColor="@android:color/white" />
</LinearLayout>