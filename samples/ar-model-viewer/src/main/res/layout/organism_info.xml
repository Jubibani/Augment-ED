    android:layout_height="wrap_content"
    android:background="#14000000"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/organism_info" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="@string/an_organism_is_any_single_thing_that_is_alive_like_a_plant_an_animal_or_even_a_tiny_bug_you_can_barely_see_if_it_eats_grows_and_can_make_more_of_itself_it_s_an_organism"
