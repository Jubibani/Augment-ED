<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:background="#14000000"
    android:orientation="vertical">



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/halobacterium_info" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Halobacterium salinarum is a tiny, rod-shaped living thing that loves to live in super salty places and can even use sunlight to make its own energy, making those salty places look pink or red!"
        android:textColor="@android:color/white" />
</LinearLayout>