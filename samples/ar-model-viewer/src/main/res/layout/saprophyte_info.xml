<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:background="#14000000"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/saprophyte_info" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Organisms, primarily fungi and bacteria, that obtain nutrients by decomposing dead organic matter, playing a crucial role in nutrient cycling and ecosystem decomposition."
        android:textColor="@android:color/white" />
</LinearLayout>