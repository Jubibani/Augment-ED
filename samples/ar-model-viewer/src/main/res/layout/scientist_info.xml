<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:background="#14000000"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/scientist_info" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="@string/scientists_are_people_who_use_the_scientific_method_to_investigate_and_understand_the_world_around_us_they_ask_questions_do_experiments_and_share_their_findings_with_others_scientists_can_study_many_different_things_like_plants_animals_the_human_body_space_and_the_earth"
        android:textColor="@android:color/white" />
</LinearLayout>