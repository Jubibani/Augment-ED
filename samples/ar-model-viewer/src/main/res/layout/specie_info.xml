<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:background="#14000000"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/specie_info" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="@string/species_refers_to_a_group_of_similar_organisms_that_are_able_to_reproduce_this_is_part_of_how_scientists_classify_meaning_to_organize_or_compare_living_things_we_are_a_species_as_humans_and_so_are_dogs"
        android:textColor="@android:color/white" />
</LinearLayout>