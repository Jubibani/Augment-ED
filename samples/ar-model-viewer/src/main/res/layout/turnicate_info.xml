<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:background="#14000000"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/turnicate_info" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Marine invertebrate chordates whose sessile, sac-like adult form filter-feeds via prominent siphons, while their free-swimming larval stage exhibits all four defining chordate characteristics."
        android:textColor="@android:color/white" />
</LinearLayout>