<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:background="#14000000"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/watermold_info" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Water molds (Oomycetes), A group of fungus-like eukaryotic microorganisms, distinct from true fungi, characterized by filamentous hyphae and cell walls composed of cellulose, commonly found in aquatic environments and as plant pathogens."
        android:textColor="@android:color/white" />
</LinearLayout>